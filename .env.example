# Universal Betting Dashboard - Environment Configuration
# Copy this file to .env and update with your actual API keys

# Sports Data API Keys (Optional - demo mode works without these)
ODDS_API_KEY=your_odds_api_key_here
APISPORTS_KEY=your_apisports_key_here
FOOTBALL_DATA_KEY=your_football_data_key_here

# Historical Data API Keys
FOOTYSTATS_API_KEY=your_footystats_api_key_here
SPORTSDATA_API_KEY=your_sportsdata_api_key_here

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=false

# Optional: Database Configuration (future expansion)
# DATABASE_URL=postgresql://user:password@localhost/betting_dashboard

# Optional: Redis Configuration (for caching)
# REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your_secret_key_here

# API Rate Limiting (requests per minute)
API_RATE_LIMIT=60
WEB_RATE_LIMIT=30

# Model Configuration Overrides (optional)
# MIN_EV_THRESHOLD=6.0
# MIN_CONFIDENCE_THRESHOLD=8
# DEFAULT_BANKROLL=2500

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Deployment Configuration
PORT=5000
HOST=0.0.0.0